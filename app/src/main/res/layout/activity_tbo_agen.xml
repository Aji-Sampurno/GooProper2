                    android:layout_height="wrap_content"
                    android:background="@color/main"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        style="@style/TextAppearance.Material3.ActionBar.Subtitle"
                        android:layout_width="match_parent"
