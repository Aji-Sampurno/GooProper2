<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TVNamaTipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Tipe"
            android:textColor="@color/white"
            style="@style/TextAppearance.Material3.TitleLarge"/>

        <Button
            android:id="@+id/BtnEditTipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Tipe"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/TVHargaTipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Harga Tipe"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/TVDeskripsiTipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Deskripsi Tipe"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/IVGambarTipe"
            android:layout_width="match_parent"
            android:layout_height="350dp"/>

    </LinearLayout>

</LinearLayout>