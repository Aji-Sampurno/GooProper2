<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main"
    android:orientation="vertical"
    tools:context=".ui.LamarActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/AppBarPelamar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/ToolbarPelamar"
            app:title="Pelamar"
            app:titleTextColor="@color/second"
            android:layout_height="?attr/actionBarSize"
            android:layout_width="match_parent"
            app:layout_scrollFlags="scroll|enterAlways"
            android:background="@color/main"/>

    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/TLPelamar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main"
        app:tabIndicatorColor="@color/second"
        app:tabSelectedTextColor="@color/second"
        app:tabTextColor="@color/second"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/VPPelamar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <FrameLayout
        android:id="@+id/FLPelamar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>